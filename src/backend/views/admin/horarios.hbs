<div class="container-fluid">
    <div class="row mx-0 g-3 mt-2">
        <section class="col-12">
            <div class="bg-fore shadow rounded-3 p-3">
                <h1 class="fw-bold"><i class="fa-duotone fa-clock text-primary"></i> Horarios</h1>
                <p class="text-light mb-1">Todos los horarios que ofrece HighQuality Barber</p>
                <div class="d-flex justify-content-start align-items-center">
                    <p class="text-muted small mt-1 mb-0 me-3"><i class="fa-solid fa-clock"></i> Actualizado hace: <span id="lastUpdated" class="text-primary">1 seg</span></p>
                    <p class="text-muted small mt-1 mb-0"><i class="fa-duotone fa-dice"></i> Total: <span id="totalitems" class="text-primary">20</span></p>
                </div>
                
            </div>
        </section>

        <section class="col-12 d-flex flex-column justify-content-center align-items-start gap-3 position-relative overflow-hidden" id="horarios">
            
        </section>
    </div>
</div>

<div class="modal fade" id="editHorario" tabindex="-1" aria-labelledby="editHorarioLabel" aria-hidden="true" data-bs-focus="false">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="editHorarioLabel">
                    <i class="fa-duotone fa-clock"></i> Editar Horario
                    <span class="small text-muted d-block" id="idUpdate"></span>
                </h1>
                
                <button type="button" class="btn-close btn-close-white" 
                data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="horas-edit"></div>
                <div class="d-flex justify-content-center align-items-center px-2">
                    <button class="btn btn-outline-primary" type="button" onclick="agregarHora(this)"><i class="fa-solid fa-clock"></i> Agregar Hora</button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-light" onclick="actualizarHorario()">
                    <i class="fa-duotone fa-save"></i> Actualizar
                </button>
            </div>
        </div>
    </div>
</div>


<script src="/js/admin/horarios.js"></script>